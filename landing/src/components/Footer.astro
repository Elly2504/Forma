---
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { href: "#how-it-works", label: "How It Works" },
    { href: "#features", label: "Features" },
    { href: "#pricing", label: "Pricing" },
  ],
  resources: [
    { href: "/blog", label: "Blog & Guides" },
    { href: "/codes", label: "Product Codes" },
  ],
  legal: [
    { href: "/privacy", label: "Privacy Policy" },
    { href: "/terms", label: "Terms of Service" },
  ],
};
---

<footer class="bg-[#0a0a0a] border-t border-white/10 py-16">
  <div class="max-w-6xl mx-auto px-4">
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      <!-- Brand -->
      <div>
        <a href="/" class="flex items-center gap-2 mb-4">
          <span class="text-2xl">⚽</span>
          <span class="text-xl font-bold bg-gradient-to-r from-amber-400 to-amber-600 bg-clip-text text-transparent">KitTicker</span>
        </a>
        <p class="text-zinc-400 text-sm">
          AI-powered vintage football shirt valuation. Know your shirt's true value in 60 seconds.
        </p>
      </div>
      
      <!-- Product Links -->
      <div>
        <h4 class="text-white font-semibold mb-4">Product</h4>
        <ul class="space-y-2">
          {footerLinks.product.map(link => (
            <li>
              <a href={link.href} class="text-zinc-400 hover:text-white transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Resources Links -->
      <div>
        <h4 class="text-white font-semibold mb-4">Resources</h4>
        <ul class="space-y-2">
          {footerLinks.resources.map(link => (
            <li>
              <a href={link.href} class="text-zinc-400 hover:text-white transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Legal Links -->
      <div>
        <h4 class="text-white font-semibold mb-4">Legal</h4>
        <ul class="space-y-2">
          {footerLinks.legal.map(link => (
            <li>
              <a href={link.href} class="text-zinc-400 hover:text-white transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
          <li>
            <a href="mailto:hello@kitticker.com" class="text-zinc-400 hover:text-white transition-colors text-sm">
              Contact
            </a>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-zinc-500 text-sm">
        © {currentYear} KitTicker. All rights reserved.
      </p>
      
      <p class="text-zinc-600 text-xs">
        AI valuations are estimates only. See <a href="/terms" class="text-zinc-500 hover:text-white">Terms</a> for disclaimer.
      </p>
    </div>
  </div>
</footer>
