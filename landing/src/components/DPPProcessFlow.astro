---
/**
 * DPPProcessFlow Component
 * 
 * 4-step visual: Verify → Generate → Certify → Transfer
 */
---

<div class="dpp-process-flow">
  <div class="process-container">
    <!-- Step 1: Verify -->
    <div class="process-step" data-step="1">
      <div class="step-number">01</div>
      <div class="step-icon step-icon-verify">
        <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
      </div>
      <h3 class="step-title">VERIFY</h3>
      <ul class="step-details">
        <li>11-point cross-validation</li>
        <li>Confidence score calculated</li>
        <li>Evidence recorded</li>
      </ul>
    </div>

    <!-- Connector -->
    <div class="process-connector">
      <div class="connector-line"></div>
      <svg class="connector-arrow" viewBox="0 0 24 24" fill="currentColor">
        <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
      </svg>
    </div>

    <!-- Step 2: Generate -->
    <div class="process-step" data-step="2">
      <div class="step-number">02</div>
      <div class="step-icon step-icon-generate">
        <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
        </svg>
      </div>
      <h3 class="step-title">GENERATE</h3>
      <ul class="step-details">
        <li>Unique UID created</li>
        <li><code>KT-2026-XXXXXX</code></li>
        <li>Evidence stored in DB</li>
      </ul>
    </div>

    <!-- Connector -->
    <div class="process-connector">
      <div class="connector-line"></div>
      <svg class="connector-arrow" viewBox="0 0 24 24" fill="currentColor">
        <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
      </svg>
    </div>

    <!-- Step 3: Certify -->
    <div class="process-step" data-step="3">
      <div class="step-number">03</div>
      <div class="step-icon step-icon-certify">
        <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <h3 class="step-title">CERTIFY</h3>
      <ul class="step-details">
        <li>QR code generated</li>
        <li>Public certificate URL</li>
        <li>Shareable proof</li>
      </ul>
    </div>

    <!-- Connector -->
    <div class="process-connector">
      <div class="connector-line"></div>
      <svg class="connector-arrow" viewBox="0 0 24 24" fill="currentColor">
        <path d="M8.59 16.59L13.17 12 8.59 7.41 10 6l6 6-6 6-1.41-1.41z"/>
      </svg>
    </div>

    <!-- Step 4: Transfer -->
    <div class="process-step" data-step="4">
      <div class="step-number">04</div>
      <div class="step-icon step-icon-transfer">
        <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
        </svg>
      </div>
      <h3 class="step-title">TRANSFER</h3>
      <ul class="step-details">
        <li>Ownership transfer</li>
        <li>Full provenance chain</li>
        <li>Timestamped history</li>
      </ul>
    </div>
  </div>
</div>

<style>
  .dpp-process-flow {
    padding: 2rem 0;
  }

  .process-container {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    max-width: 1100px;
    margin: 0 auto;
  }

  .process-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 1.5rem;
    min-width: 180px;
    max-width: 200px;
    background: linear-gradient(135deg, rgba(24, 24, 27, 0.8), rgba(20, 20, 20, 0.6));
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    position: relative;
    transition: all 0.3s ease;
  }

  .process-step:hover {
    transform: translateY(-4px);
    border-color: rgba(168, 85, 247, 0.4);
    box-shadow: 0 8px 32px rgba(168, 85, 247, 0.15);
  }

  .step-number {
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.7rem;
    font-weight: 800;
    color: var(--gold-400);
    background: var(--bg-primary);
    padding: 4px 12px;
    border-radius: 100px;
    border: 1px solid rgba(251, 191, 36, 0.3);
  }

  .step-icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 16px;
    margin-bottom: 1rem;
    margin-top: 0.5rem;
  }

  .step-icon-verify {
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.2), rgba(16, 185, 129, 0.1));
    border: 1px solid rgba(16, 185, 129, 0.3);
    color: #10b981;
  }

  .step-icon-generate {
    background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), rgba(6, 182, 212, 0.1));
    border: 1px solid rgba(6, 182, 212, 0.3);
    color: #06b6d4;
  }

  .step-icon-certify {
    background: linear-gradient(135deg, rgba(168, 85, 247, 0.2), rgba(168, 85, 247, 0.1));
    border: 1px solid rgba(168, 85, 247, 0.3);
    color: #a855f7;
  }

  .step-icon-transfer {
    background: linear-gradient(135deg, rgba(251, 191, 36, 0.2), rgba(251, 191, 36, 0.1));
    border: 1px solid rgba(251, 191, 36, 0.3);
    color: var(--gold-400);
  }

  .step-title {
    font-size: 0.9rem;
    font-weight: 800;
    color: white;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
  }

  .step-details {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .step-details li {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-bottom: 0.25rem;
  }

  .step-details code {
    font-family: monospace;
    background: rgba(168, 85, 247, 0.15);
    color: #a855f7;
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.7rem;
  }

  .process-connector {
    display: flex;
    align-items: center;
    padding: 0 0.25rem;
    margin-top: 3rem;
  }

  .connector-line {
    width: 20px;
    height: 2px;
    background: linear-gradient(90deg, rgba(168, 85, 247, 0.3), rgba(168, 85, 247, 0.6));
  }

  .connector-arrow {
    width: 20px;
    height: 20px;
    color: #a855f7;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .process-container {
      flex-direction: column;
      align-items: center;
    }

    .process-connector {
      transform: rotate(90deg);
      margin: 0.5rem 0;
    }

    .process-step {
      width: 100%;
      max-width: 280px;
    }
  }
</style>
