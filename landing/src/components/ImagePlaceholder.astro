---
interface Props {
  id: string;
  alt: string;
  caption?: string;
  aspectRatio?: 'square' | 'video' | 'portrait' | 'wide';
}

const { id, alt, caption, aspectRatio = 'video' } = Astro.props;

const aspectRatioClasses: Record<string, string> = {
  square: 'aspect-square',
  video: 'aspect-video',
  portrait: 'aspect-[3/4]',
  wide: 'aspect-[21/9]'
};
---

<figure class="my-6 sm:my-8">
  <div class={`relative ${aspectRatioClasses[aspectRatio]} bg-zinc-800/50 rounded-xl border-2 border-dashed border-zinc-600 overflow-hidden`}>
    <!-- Placeholder Content -->
    <div class="absolute inset-0 flex flex-col items-center justify-center p-4 text-center">
      <!-- Camera Icon -->
      <svg class="w-12 h-12 sm:w-16 sm:h-16 text-zinc-500 mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      
      <!-- Placeholder ID -->
      <code class="text-xs sm:text-sm font-mono text-amber-400 bg-zinc-900/80 px-3 py-1.5 rounded-lg mb-2">
        {id}
      </code>
      
      <!-- Description -->
      <p class="text-xs sm:text-sm text-zinc-500 max-w-xs">
        {alt}
      </p>
    </div>
  </div>
  
  {caption && (
    <figcaption class="mt-3 text-sm text-zinc-500 text-center">
      {caption}
    </figcaption>
  )}
</figure>
