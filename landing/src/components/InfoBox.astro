---
interface Props {
  type?: 'tip' | 'warning' | 'important' | 'example' | 'note';
  title?: string;
}

const { type = 'note', title } = Astro.props;

const typeStyles: Record<string, { bg: string; border: string; icon: string; iconColor: string; defaultTitle: string }> = {
  tip: {
    bg: 'bg-emerald-500/10',
    border: 'border-emerald-500/30',
    iconColor: 'text-emerald-400',
    defaultTitle: 'Pro Tip',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />`
  },
  warning: {
    bg: 'bg-amber-500/10',
    border: 'border-amber-500/30',
    iconColor: 'text-amber-400',
    defaultTitle: 'Warning',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />`
  },
  important: {
    bg: 'bg-red-500/10',
    border: 'border-red-500/30',
    iconColor: 'text-red-400',
    defaultTitle: 'Important',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`
  },
  example: {
    bg: 'bg-blue-500/10',
    border: 'border-blue-500/30',
    iconColor: 'text-blue-400',
    defaultTitle: 'Example',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122" />`
  },
  note: {
    bg: 'bg-zinc-500/10',
    border: 'border-zinc-500/30',
    iconColor: 'text-zinc-400',
    defaultTitle: 'Note',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`
  }
};

const style = typeStyles[type];
const displayTitle = title || style.defaultTitle;
---

<div class={`my-6 sm:my-8 p-4 sm:p-5 rounded-xl ${style.bg} border ${style.border}`}>
  <div class="flex gap-3">
    <!-- Icon -->
    <div class={`flex-shrink-0 ${style.iconColor}`}>
      <svg class="w-5 h-5 sm:w-6 sm:h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={style.icon} />
    </div>
    
    <!-- Content -->
    <div class="flex-1 min-w-0">
      <h4 class={`font-semibold text-sm sm:text-base ${style.iconColor} mb-1`}>
        {displayTitle}
      </h4>
      <div class="text-sm sm:text-base text-zinc-300 leading-relaxed [&>p]:m-0 [&>ul]:mt-2 [&>ul]:mb-0">
        <slot />
      </div>
    </div>
  </div>
</div>
