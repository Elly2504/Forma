</div>

<script>
  import { preprocessForOCR, extractProductCode } from '../lib/ocr';
  import { verifyProductCode, verifyWithVisualData, type VerdictType, type AuthenticationSignal, type VisualData } from '../lib/verifier';
  import { analyzeImage } from '../lib/image-analyzer';
  import Tesseract from 'tesseract.js';

  // ============================================
  // Checkpoint Configuration
  // ============================================
  
  interface Checkpoint {
    id: string;
    label: string;
    icon: string;
  }

  const CHECKPOINTS: Checkpoint[] = [
    { id: 'database_match', label: 'Database', icon: 'üîç' },
    { id: 'blacklist_check', label: 'Blacklist', icon: '‚õî' },
    { id: 'format_validation', label: 'Format', icon: 'üìù' },
    { id: 'brand_consistency', label: 'Brand', icon: 'üèÖ' },
    { id: 'era_plausibility', label: 'Era Valid', icon: 'üìÖ' },
    { id: 'manufacturer_era_consistency', label: 'Manufacturer', icon: 'üè≠' },
    { id: 'sponsor_era', label: 'Sponsor', icon: 'üè∑Ô∏è' },
    { id: 'technology_tier', label: 'Technology', icon: '‚öôÔ∏è' },
    { id: 'color_suffix', label: 'Color', icon: 'üé®' },
    { id: 'label_position', label: 'Label Era', icon: 'üìç' },
    { id: 'manufacturing_origin', label: 'Origin', icon: 'üåè' },
  ];

  // ============================================
  // DOM Elements
  // ============================================
  
  // Tabs
  const tabCamera = document.getElementById('tab-camera');
  const tabUpload = document.getElementById('tab-upload');
  const tabContentCamera = document.getElementById('tab-content-camera');
  const tabContentUpload = document.getElementById('tab-content-upload');
  
  // Camera elements
  const cameraPermission = document.getElementById('hub-camera-permission');
  const cameraContainer = document.getElementById('hub-camera-container');
  const cameraProcessing = document.getElementById('hub-camera-processing');
  const startCameraBtn = document.getElementById('hub-start-camera-btn');
  const captureBtn = document.getElementById('hub-capture-btn');
  const closeCameraBtn = document.getElementById('hub-close-camera-btn');
  const video = document.getElementById('hub-camera-video') as HTMLVideoElement;
  const canvas = document.getElementById('hub-capture-canvas') as HTMLCanvasElement;
  const cameraStatus = document.getElementById('hub-camera-status');
  const cameraProcessingText = document.getElementById('hub-camera-processing-text');
  
  // Upload elements
  const dropZone = document.getElementById('hub-drop-zone');
  const fileInput = document.getElementById('hub-file-input') as HTMLInputElement;
  const imagePreviews = document.getElementById('hub-image-previews');
  const ocrProgress = document.getElementById('hub-ocr-progress');
  const progressBar = document.getElementById('hub-progress-bar');
  const progressText = document.getElementById('hub-progress-text');
  const extractedCodes = document.getElementById('hub-extracted-codes');
  const codesList = document.getElementById('hub-codes-list');
  const verifyBtn = document.getElementById('hub-verify-btn');
  
  // Checkpoint elements
  const checkpointGrid = document.getElementById('checkpoint-grid');
  const checkpointSummary = document.getElementById('checkpoint-summary');
  
  // Result elements
  const verificationResult = document.getElementById('hub-verification-result');
  const resultContent = document.getElementById('hub-result-content');

  // State
  let currentStream: MediaStream | null = null;
  let uploadedFiles: File[] = [];
  let detectedCodes: { code: string; brand: string }[] = [];
  const MAX_IMAGES = 4;
  const ctx = canvas?.getContext('2d');

  // ============================================
  // Tab Switching
  // ============================================
  
  function switchTab(tab: 'camera' | 'upload') {
    const isCamera = tab === 'camera';
    
    tabCamera?.classList.toggle('border-amber-500', isCamera);
    tabCamera?.classList.toggle('text-amber-400', isCamera);
    tabCamera?.classList.toggle('border-transparent', !isCamera);
    tabCamera?.classList.toggle('text-zinc-400', !isCamera);
    
    tabUpload?.classList.toggle('border-amber-500', !isCamera);
    tabUpload?.classList.toggle('text-amber-400', !isCamera);
    tabUpload?.classList.toggle('border-transparent', isCamera);
    tabUpload?.classList.toggle('text-zinc-400', isCamera);
    
    tabContentCamera?.classList.toggle('hidden', !isCamera);
    tabContentUpload?.classList.toggle('hidden', isCamera);
  }

  tabCamera?.addEventListener('click', () => switchTab('camera'));
  tabUpload?.addEventListener('click', () => switchTab('upload'));

  // ============================================
  // Checkpoint Rendering
  // ============================================
  
  function getCheckpointClasses(status: string) {
    switch (status) {
      case 'pass':
        return 'border-emerald-500/50 bg-emerald-500/10 text-emerald-400';
      case 'fail':
        return 'border-red-500/50 bg-red-500/10 text-red-400';
      case 'warning':
        return 'border-yellow-500/50 bg-yellow-500/10 text-yellow-400';
      default:
        return 'border-zinc-700 bg-zinc-800/50 text-zinc-500';
    }
  }

  function renderCheckpoints(signals: AuthenticationSignal[]) {
    if (!checkpointGrid) return;
    
    checkpointGrid.innerHTML = CHECKPOINTS.map(cp => {
      const signal = signals.find(s => s.id === cp.id);
      const status = signal?.value || 'pending';
      const classes = getCheckpointClasses(status);
      const iconClass = status === 'pending' ? 'text-zinc-500' : '';
      
      return `
        <div class="checkpoint p-2 rounded-lg border ${classes}" title="${signal?.evidence || 'Pending verification'}">
          <div class="flex items-center gap-2">
            <span class="${iconClass}">${cp.icon}</span>
            <span class="text-xs">${cp.label}</span>
          </div>
        </div>
      `;
    }).join('');
  }

  function resetCheckpoints() {
    if (!checkpointGrid) return;
    
    checkpointGrid.innerHTML = CHECKPOINTS.map(cp => `
      <div class="checkpoint checkpoint-pending p-2 rounded-lg border border-zinc-700 bg-zinc-800/50">
        <div class="flex items-center gap-2">
          <span class="text-zinc-500">${cp.icon}</span>
          <span class="text-xs text-zinc-500">${cp.label}</span>
        </div>
      </div>
    `).join('');
    
    if (checkpointSummary) {
      checkpointSummary.textContent = 'Scan or upload a photo to start verification';
    }
  }

  // ============================================
  // Verification Result Display
  // ============================================
  
  function getVerdictColors(verdict: VerdictType) {
    const colors = {
      highly_likely_authentic: { bg: 'bg-emerald-500/10', border: 'border-emerald-500/30', text: 'text-emerald-400', icon: '‚úì' },
      probably_authentic: { bg: 'bg-green-500/10', border: 'border-green-500/30', text: 'text-green-400', icon: '‚úì' },
      uncertain: { bg: 'bg-yellow-500/10', border: 'border-yellow-500/30', text: 'text-yellow-400', icon: '?' },
      suspicious: { bg: 'bg-orange-500/10', border: 'border-orange-500/30', text: 'text-orange-400', icon: '‚ö†' },
      likely_fake: { bg: 'bg-red-500/10', border: 'border-red-500/30', text: 'text-red-400', icon: '‚úó' },
      blacklisted: { bg: 'bg-red-600/20', border: 'border-red-600/50', text: 'text-red-500', icon: '‚õî' },
    };
    return colors[verdict];
  }

  function getVerdictLabel(verdict: VerdictType): string {
    const labels = {
      highly_likely_authentic: 'Highly Likely Authentic',
      probably_authentic: 'Probably Authentic',
      uncertain: 'Uncertain',
      suspicious: 'Suspicious',
      likely_fake: 'Likely Fake',
      blacklisted: 'Known Counterfeit',
    };
    return labels[verdict];
  }

  function showVerificationResult(result: Awaited<ReturnType<typeof verifyProductCode>>) {
    if (!verificationResult || !resultContent) return;
    
    const colors = getVerdictColors(result.verdict);
    
    verificationResult.classList.remove('hidden');
    resultContent.innerHTML = `
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 rounded-xl ${colors.bg} flex items-center justify-center">
          <span class="${colors.text} text-2xl">${colors.icon}</span>
        </div>
        <div class="flex-1">
          <div class="flex items-center gap-2">
            <span class="px-2 py-0.5 text-xs font-semibold ${colors.bg} ${colors.text} rounded">${getVerdictLabel(result.verdict)}</span>
            <span class="text-xl font-bold ${colors.text}">${result.confidenceScore}%</span>
          </div>
          <p class="text-sm text-zinc-400 mt-1">${result.recommendation}</p>
          ${result.matchedProduct ? `
            <p class="text-sm text-zinc-300 mt-2">${result.matchedProduct.team} ‚Ä¢ ${result.matchedProduct.brand} ‚Ä¢ ${result.matchedProduct.season || ''}</p>
          ` : ''}
        </div>
      </div>
      <button id="hub-scan-again-btn" class="w-full mt-4 py-2 text-sm text-amber-400 hover:text-amber-300">
        Scan Another
      </button>
    `;
    resultContent.className = `p-4 rounded-xl border ${colors.border} ${colors.bg}`;
    
    document.getElementById('hub-scan-again-btn')?.addEventListener('click', () => {
      verificationResult.classList.add('hidden');
      resetCheckpoints();
    });
    
    // Update checkpoint summary
    if (checkpointSummary) {
      const passCount = result.signals.filter(s => s.value === 'pass').length;
      checkpointSummary.textContent = `${passCount}/${result.signals.length} checks passed`;
      checkpointSummary.className = `text-xs mt-3 text-center ${colors.text}`;
    }
  }

  // ============================================
  // Camera Functions
  // ============================================
  
  async function startCamera() {
    try {
      const stream = await navigator.mediaDevices.getUserMedia({
        video: { facingMode: 'environment', width: { ideal: 1280 }, height: { ideal: 720 } }
      });
      
      currentStream = stream;
      video.srcObject = stream;
      
      video.onloadedmetadata = () => {
        cameraPermission?.classList.add('hidden');
        cameraContainer?.classList.remove('hidden');
      };
    } catch (error) {
      console.error('Camera error:', error);
      alert('Could not access camera. Please check permissions.');
    }
  }

  function stopCamera() {
    if (currentStream) {
      currentStream.getTracks().forEach(track => track.stop());
      currentStream = null;
    }
    video.srcObject = null;
    cameraContainer?.classList.add('hidden');
    cameraPermission?.classList.remove('hidden');
  }

  async function captureAndProcess() {
    if (!video.videoWidth || !ctx) return;
    
    // Show processing
    cameraContainer?.classList.add('hidden');
    cameraProcessing?.classList.remove('hidden');
    if (cameraProcessingText) cameraProcessingText.textContent = 'Capturing image...';
    
    // Capture frame
    canvas.width = video.videoWidth;
    canvas.height = video.videoHeight;
    ctx.drawImage(video, 0, 0);
    const imageData = canvas.toDataURL('image/png');
    
    try {
      if (cameraProcessingText) cameraProcessingText.textContent = 'Extracting code...';
      const processed = await preprocessForOCR(imageData);
      const ocrResult = await extractProductCode(processed);
      
      if (ocrResult.extractedCodes.length > 0) {
        const code = ocrResult.extractedCodes[0];
        if (cameraProcessingText) cameraProcessingText.textContent = 'Verifying...';
        
        const result = await verifyProductCode(code.code);
        
        // Update checkpoints
        renderCheckpoints(result.signals);
        
        // Show result
        cameraProcessing?.classList.add('hidden');
        showVerificationResult(result);
      } else {
        // No code found
        cameraProcessing?.classList.add('hidden');
        cameraContainer?.classList.remove('hidden');
        if (cameraStatus) cameraStatus.textContent = 'No code found. Try capturing the label more closely.';
      }
    } catch (error) {
      console.error('Processing error:', error);
      cameraProcessing?.classList.add('hidden');
      cameraContainer?.classList.remove('hidden');
      if (cameraStatus) cameraStatus.textContent = 'Error processing image. Please try again.';
    }
  }

  startCameraBtn?.addEventListener('click', startCamera);
  captureBtn?.addEventListener('click', captureAndProcess);
  closeCameraBtn?.addEventListener('click', stopCamera);

  // ============================================
  // Upload Functions
  // ============================================

  const CODE_PATTERNS: Record<string, RegExp[]> = {
    Nike: [/[A-Z]{2}\d{4}-\d{3}/g, /\d{6}-\d{3}/g],
    Adidas: [/[A-Z]{2}\d{4}/g, /[A-Z]\d{5}/g],
    Puma: [/\d{6}-\d{2}/g],
    Umbro: [/\d{5}-U/gi],
  };

  function extractCodesFromText(text: string): { code: string; brand: string }[] {
    const codes: { code: string; brand: string }[] = [];
    const seen = new Set<string>();
    const normalizedText = text.toUpperCase().replace(/[Oo]/g, '0').replace(/[Il]/g, '1');
    
    for (const [brand, patterns] of Object.entries(CODE_PATTERNS)) {
      for (const pattern of patterns) {
        pattern.lastIndex = 0;
        const matches = normalizedText.matchAll(pattern);
        for (const match of matches) {
          const code = match[0].toUpperCase();
          if (!seen.has(code)) {
            seen.add(code);
            codes.push({ code, brand });
          }
        }
      }
    }
    return codes;
  }

  function handleFiles(files: FileList | File[]) {
    const imageFiles = Array.from(files).filter(f => f.type.startsWith('image/'));
    
    if (uploadedFiles.length + imageFiles.length > MAX_IMAGES) {
      alert(`Maximum ${MAX_IMAGES} images allowed`);
      return;
    }
    
    uploadedFiles = [...uploadedFiles, ...imageFiles];
    renderPreviews();
    
    if (uploadedFiles.length > 0) {
      processUploadedImages();
    }
  }

  function renderPreviews() {
    if (!imagePreviews) return;
    
    if (uploadedFiles.length === 0) {
      imagePreviews.classList.add('hidden');
      return;
    }
    
    imagePreviews.classList.remove('hidden');
    imagePreviews.innerHTML = uploadedFiles.map((file, index) => `
      <div class="relative group aspect-square rounded-lg overflow-hidden bg-zinc-800">
        <img src="${URL.createObjectURL(file)}" alt="Upload ${index + 1}" class="w-full h-full object-cover" />
        <button class="remove-btn absolute top-1 right-1 w-6 h-6 bg-red-500/80 hover:bg-red-500 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity" data-index="${index}">
          <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    `).join('');
    
    document.querySelectorAll('.remove-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        const index = parseInt((btn as HTMLElement).dataset.index || '0');
        uploadedFiles.splice(index, 1);
        renderPreviews();
        if (uploadedFiles.length > 0) {
          processUploadedImages();
        } else {
          extractedCodes?.classList.add('hidden');
          detectedCodes = [];
        }
      });
    });
  }

  async function processUploadedImages() {
    if (!ocrProgress || !progressBar || !progressText) return;
    
    ocrProgress.classList.remove('hidden');
    detectedCodes = [];
    
    for (let i = 0; i < uploadedFiles.length; i++) {
      const file = uploadedFiles[i];
      
      try {
        const processedImage = await preprocessForOCR(file);
        const { data } = await Tesseract.recognize(processedImage, 'eng', {
          logger: (m) => {
            if (m.status === 'recognizing text') {
              const totalProgress = ((i + m.progress) / uploadedFiles.length) * 100;
              progressBar.style.width = `${totalProgress}%`;
              progressText.textContent = `${Math.round(totalProgress)}%`;
            }
          },
        });
        
        const codes = extractCodesFromText(data.text);
        detectedCodes.push(...codes);
      } catch (error) {
        console.error('OCR error:', error);
      }
    }
    
    ocrProgress.classList.add('hidden');
    renderExtractedCodes();
  }

  function renderExtractedCodes() {
    if (!extractedCodes || !codesList) return;
    
    const noCodeFound = document.getElementById('hub-no-code-found');
    
    if (detectedCodes.length === 0) {
      extractedCodes.classList.add('hidden');
      // Show manual entry option when no codes detected
      noCodeFound?.classList.remove('hidden');
      if (checkpointSummary) {
        checkpointSummary.textContent = 'No code found - enter manually above';
        checkpointSummary.className = 'text-xs text-yellow-400 mt-3 text-center';
      }
      return;
    }
    
    // Hide manual entry if codes were found
    noCodeFound?.classList.add('hidden');
    extractedCodes.classList.remove('hidden');
    codesList.innerHTML = detectedCodes.map((item, index) => `
      <div class="flex items-center justify-between p-3 bg-zinc-800/50 rounded-lg">
        <div class="flex items-center gap-3">
          <span class="w-6 h-6 rounded-full bg-amber-500/20 text-amber-400 text-xs flex items-center justify-center">${index + 1}</span>
          <code class="font-mono text-zinc-200">${item.code}</code>
        </div>
        <span class="px-2 py-1 text-xs rounded bg-zinc-700 text-zinc-400">${item.brand}</span>
      </div>
    `).join('');
  }

  async function verifyAllCodes() {
    if (detectedCodes.length === 0) return;
    
    // Use the first code for now (can be extended to verify all)
    const firstCode = detectedCodes[0];
    
    if (checkpointSummary) checkpointSummary.textContent = 'Analyzing images...';
    
    try {
      // Analyze uploaded images for visual cross-validation
      let visualData: VisualData | undefined;
      
      if (uploadedFiles.length > 0) {
        // Use the first image for color/visual analysis
        const firstImage = uploadedFiles[0];
        
        // Get all OCR texts for sponsor/technology detection
        const allOcrTexts: string[] = [];
        for (const file of uploadedFiles) {
          try {
            const processed = await preprocessForOCR(file);
            const { data } = await Tesseract.recognize(processed, 'eng');
            allOcrTexts.push(data.text);
          } catch {
            // Continue even if OCR fails for some images
          }
        }
        
        // Analyze the image for visual data
        const analysisResult = await analyzeImage(firstImage, allOcrTexts);
        
        visualData = {
          dominantColor: analysisResult.dominantColor,
          sponsorHint: analysisResult.sponsorHint,
          technologyHint: analysisResult.technologyHint,
          colorConfidence: analysisResult.colorConfidence
        };
        
        // Show what we detected
        if (checkpointSummary) {
          const detected = [];
          if (visualData.dominantColor) detected.push(`Color: ${visualData.dominantColor}`);
          if (visualData.sponsorHint) detected.push(`Sponsor: ${visualData.sponsorHint}`);
          if (visualData.technologyHint) detected.push(`Tech: ${visualData.technologyHint}`);
          checkpointSummary.textContent = detected.length > 0 
            ? `Detected: ${detected.join(' ‚Ä¢ ')} - Verifying...`
            : 'Verifying...';
        }
      } else {
        if (checkpointSummary) checkpointSummary.textContent = 'Verifying...';
      }
      
      // Use visual cross-validation if we have visual data
      const result = visualData 
        ? await verifyWithVisualData(firstCode.code, visualData)
        : await verifyProductCode(firstCode.code);
      
      // Update checkpoints with full signal suite
      renderCheckpoints(result.signals);
      
      // Show result
      showVerificationResult(result);
    } catch (error) {
      console.error('Verification error:', error);
      if (checkpointSummary) checkpointSummary.textContent = 'Verification failed. Please try again.';
    }
  }

  // Drag and drop
  dropZone?.addEventListener('dragover', (e) => {
    e.preventDefault();
    dropZone.classList.add('border-amber-500', 'bg-amber-500/10');
  });

  dropZone?.addEventListener('dragleave', () => {
    dropZone.classList.remove('border-amber-500', 'bg-amber-500/10');
  });

  dropZone?.addEventListener('drop', (e) => {
    e.preventDefault();
    dropZone.classList.remove('border-amber-500', 'bg-amber-500/10');
    if (e.dataTransfer?.files) {
      handleFiles(e.dataTransfer.files);
    }
  });

  fileInput?.addEventListener('change', () => {
    if (fileInput.files) {
      handleFiles(fileInput.files);
    }
  });

  verifyBtn?.addEventListener('click', verifyAllCodes);

  // ============================================
  // Manual Code Entry
  // ============================================
  
  const manualCodeInput = document.getElementById('hub-manual-code-input') as HTMLInputElement;
  const manualVerifyBtn = document.getElementById('hub-manual-verify-btn');

  async function verifyManualCode() {
    const code = manualCodeInput?.value.trim();
    if (!code) {
      alert('Please enter a product code');
      return;
    }
    
    if (checkpointSummary) checkpointSummary.textContent = 'Analyzing...';
    
    try {
      // Check if we have uploaded images for visual cross-validation
      let visualData: VisualData | undefined;
      
      if (uploadedFiles.length > 0) {
        if (checkpointSummary) checkpointSummary.textContent = 'Analyzing images...';
        
        // Use the first image for color/visual analysis
        const firstImage = uploadedFiles[0];
        
        // Get all OCR texts for sponsor/technology detection
        const allOcrTexts: string[] = [];
        for (const file of uploadedFiles) {
          try {
            const processed = await preprocessForOCR(file);
            const { data } = await Tesseract.recognize(processed, 'eng');
            allOcrTexts.push(data.text);
          } catch {
            // Continue even if OCR fails
          }
        }
        
        // Analyze the image for visual data
        const analysisResult = await analyzeImage(firstImage, allOcrTexts);
        
        visualData = {
          dominantColor: analysisResult.dominantColor,
          sponsorHint: analysisResult.sponsorHint,
          technologyHint: analysisResult.technologyHint,
          colorConfidence: analysisResult.colorConfidence
        };
        
        // Show what we detected
        const detected = [];
        if (visualData.dominantColor) detected.push(`Color: ${visualData.dominantColor}`);
        if (visualData.sponsorHint) detected.push(`Sponsor: ${visualData.sponsorHint}`);
        if (visualData.technologyHint) detected.push(`Tech: ${visualData.technologyHint}`);
        
        if (checkpointSummary) {
          checkpointSummary.textContent = detected.length > 0 
            ? `Detected: ${detected.join(' ‚Ä¢ ')} - Verifying...`
            : 'Verifying...';
        }
      } else {
        if (checkpointSummary) checkpointSummary.textContent = 'Verifying...';
      }
      
      // Use visual cross-validation if we have visual data
      const result = visualData 
        ? await verifyWithVisualData(code, visualData)
        : await verifyProductCode(code);
      
      // Update checkpoints with full signal suite
      renderCheckpoints(result.signals);
      
      // Show result
      showVerificationResult(result);
      
      // Hide manual entry section
      document.getElementById('hub-no-code-found')?.classList.add('hidden');
    } catch (error) {
      console.error('Verification error:', error);
      if (checkpointSummary) checkpointSummary.textContent = 'Verification failed. Please try again.';
    }
  }

  manualVerifyBtn?.addEventListener('click', verifyManualCode);
  manualCodeInput?.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
      verifyManualCode();
    }
  });
</script>
