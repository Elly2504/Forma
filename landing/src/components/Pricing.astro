---
const tiers = [
  {
    name: "Free",
    price: "$0",
    period: "forever",
    description: "Try it out",
    features: [
      "3 valuations per month",
      "Basic condition grade (A-F)",
      "General price range",
      "Watermarked reports"
    ],
    cta: "Coming Soon",
    href: "#",
    featured: false,
    disabled: true
  },
  {
    name: "Collector",
    price: "$9.99",
    period: "/month",
    description: "For serious collectors",
    features: [
      "25 valuations per month",
      "Detailed condition breakdown",
      "Exact price estimates",
      "PDF certificates (shareable)",
      "Price trend tracking",
      "Priority AI processing"
    ],
    cta: "Coming Soon",
    href: "#",
    featured: true,
    disabled: true
  },
  {
    name: "Dealer",
    price: "$49.99",
    period: "/month",
    description: "For traders & shops",
    features: [
      "100 valuations per month",
      "Everything in Collector",
      "API access",
      "Bulk upload (10+ items)",
      "White-label certificates",
      "Dedicated support"
    ],
    cta: "Coming Soon",
    href: "#",
    featured: false,
    disabled: true
  }
];
---

<section id="pricing" class="relative py-24">
  <div class="container">
    <div class="text-center mb-16">
      <span class="text-[var(--gold-500)] text-sm font-semibold uppercase tracking-wider">Pricing</span>
      <h2 class="text-4xl md:text-5xl font-bold mt-4 mb-6">
        Simple, <span class="text-gradient">Transparent</span> Pricing
      </h2>
      <p class="text-[var(--text-secondary)] text-lg max-w-2xl mx-auto">
        Start free, upgrade when you need more. All plans include our core AI valuation technology.
      </p>
    </div>
    
    <!-- Early Access Banner -->
    <div class="max-w-2xl mx-auto mb-12 p-6 rounded-2xl bg-gradient-to-r from-amber-500/10 to-transparent border border-amber-500/20 text-center">
      <p class="text-amber-400 font-semibold mb-2">Early Access Coming Soon</p>
      <p class="text-zinc-400 text-sm">We're building something special. Check out our <a href="/blog" class="text-amber-400 underline">guides</a> while you wait.</p>
    </div>
    
    <div class="grid lg:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {tiers.map((tier) => (
        <div class={`glass-card p-8 relative ${tier.featured ? 'border-[var(--gold-500)] gold-glow' : ''} ${tier.disabled ? 'opacity-75' : ''}`}>
          {tier.featured && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-[var(--gold-500)] text-black text-xs font-bold py-1 px-4 rounded-full">
              POPULAR
            </div>
          )}
          
          <div class="text-center mb-6">
            <h3 class="text-xl font-bold mb-2">{tier.name}</h3>
            <p class="text-[var(--text-muted)] text-sm">{tier.description}</p>
          </div>
          
          <div class="text-center mb-6">
            <span class="text-5xl font-bold">{tier.price}</span>
            <span class="text-[var(--text-muted)]">{tier.period}</span>
          </div>
          
          <ul class="space-y-3 mb-8">
            {tier.features.map((feature) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-[var(--gold-500)] flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-[var(--text-secondary)] text-sm">{feature}</span>
              </li>
            ))}
          </ul>
          
          <button 
            disabled={tier.disabled}
            class={`w-full py-3 px-6 rounded-full font-semibold transition-all ${
              tier.featured 
                ? 'bg-gradient-to-r from-amber-400 to-amber-600 text-black cursor-not-allowed opacity-60' 
                : 'bg-white/5 text-white border border-white/10 cursor-not-allowed opacity-60'
            }`}
          >
            {tier.cta}
          </button>
        </div>
      ))}
    </div>
    
    <p class="text-center text-[var(--text-muted)] text-sm mt-10">
      Need more valuations? <span class="text-[var(--gold-400)]">Credit packs available</span> from $0.30/valuation. No subscription required.
    </p>
  </div>
</section>
