---
/**
 * DPPPreview Component
 * 
 * Digital Product Passport certificate preview with QR code and share buttons.
 * Shows EU 2027 DPP compliance.
 */
---

<div class="dpp-preview-container">
  <div class="dpp-header">
    <h3 class="dpp-title">Digital Product Passport</h3>
    <p class="dpp-subtitle">Blockchain-ready certificate for proven authenticity</p>
  </div>

  <div class="dpp-card">
    <!-- Certificate Header -->
    <div class="certificate-header">
      <div class="certificate-logo">
        <svg class="logo-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
        </svg>
        <span class="logo-text">KitTicker</span>
      </div>
      <div class="certificate-badge">
        <span class="badge-dot"></span>
        <span>Verified Authentic</span>
      </div>
    </div>

    <!-- Certificate Body -->
    <div class="certificate-body">
      <!-- QR Code Side -->
      <div class="qr-section">
        <div class="qr-code">
          <div class="qr-placeholder">
            <!-- Simulated QR code pattern -->
            <div class="qr-row">
              <div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell filled"></div>
            </div>
            <div class="qr-row">
              <div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell"></div>
            </div>
            <div class="qr-row">
              <div class="qr-cell filled"></div><div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell filled"></div><div class="qr-cell"></div>
            </div>
            <div class="qr-row">
              <div class="qr-cell"></div><div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell filled"></div>
            </div>
            <div class="qr-row">
              <div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell filled"></div>
            </div>
            <div class="qr-row">
              <div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell"></div>
            </div>
            <div class="qr-row">
              <div class="qr-cell filled"></div><div class="qr-cell filled"></div><div class="qr-cell filled"></div><div class="qr-cell"></div><div class="qr-cell filled"></div><div class="qr-cell filled"></div><div class="qr-cell filled"></div>
            </div>
          </div>
        </div>
        <p class="qr-label">Scan to verify</p>
      </div>

      <!-- Details Side -->
      <div class="details-section">
        <div class="uid-row">
          <span class="uid-label">UID</span>
          <code class="uid-value">KT-2026-A7B3C1</code>
        </div>

        <div class="details-grid">
          <div class="detail-item">
            <span class="detail-label">Product</span>
            <span class="detail-value">Nike Man Utd 2007/08 Home</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">Code</span>
            <span class="detail-value">237867-648</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">Verified</span>
            <span class="detail-value">2026-01-19</span>
          </div>
          <div class="detail-item">
            <span class="detail-label">Confidence</span>
            <span class="detail-value confidence-value">94% (Highly Likely)</span>
          </div>
        </div>

        <div class="certificate-url">
          <span class="url-icon">ðŸ”—</span>
          <span class="url-text">kitticker.com/certificate/KT-2026-A7B3C1</span>
        </div>
      </div>
    </div>

    <!-- Certificate Footer -->
    <div class="certificate-footer">
      <div class="share-buttons">
        <button class="share-btn">
          <svg class="share-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
          Share
        </button>
        <button class="share-btn">
          <svg class="share-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M8 12a1 1 0 11-2 0 1 1 0 012 0zm5 0a1 1 0 11-2 0 1 1 0 012 0zm5 0a1 1 0 11-2 0 1 1 0 012 0z"/>
          </svg>
          Copy Link
        </button>
        <button class="share-btn share-btn-primary">
          <svg class="share-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
          Download PDF
        </button>
      </div>
    </div>
  </div>

  <!-- EU Compliance Badge -->
  <div class="eu-compliance">
    <div class="eu-badge">
      <span class="eu-flag">ðŸ‡ªðŸ‡º</span>
      <div class="eu-text">
        <span class="eu-title">EU 2027 DPP Ready</span>
        <span class="eu-subtitle">Compliant with Digital Product Passport Directive</span>
      </div>
    </div>
  </div>
</div>

<style>
  .dpp-preview-container {
    max-width: 600px;
    margin: 0 auto;
  }

  .dpp-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .dpp-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
  }

  .dpp-subtitle {
    font-size: 0.9rem;
    color: var(--text-muted);
  }

  .dpp-card {
    background: linear-gradient(135deg, rgba(24, 24, 27, 0.9), rgba(20, 20, 20, 0.95));
    border: 2px solid rgba(168, 85, 247, 0.3);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 0 40px rgba(168, 85, 247, 0.1);
  }

  /* Certificate Header */
  .certificate-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 1.5rem;
    background: linear-gradient(90deg, rgba(168, 85, 247, 0.1), transparent);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .certificate-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .logo-icon {
    width: 24px;
    height: 24px;
    color: var(--gold-400);
  }

  .logo-text {
    font-size: 1.1rem;
    font-weight: 700;
    color: white;
  }

  .certificate-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: #10b981;
    background: rgba(16, 185, 129, 0.1);
    padding: 6px 12px;
    border-radius: 100px;
    border: 1px solid rgba(16, 185, 129, 0.3);
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Certificate Body */
  .certificate-body {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1.5rem;
    padding: 1.5rem;
  }

  /* QR Section */
  .qr-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .qr-code {
    width: 120px;
    height: 120px;
    background: white;
    border-radius: 8px;
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .qr-placeholder {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .qr-row {
    display: flex;
    gap: 2px;
  }

  .qr-cell {
    width: 12px;
    height: 12px;
    background: #e5e5e5;
    border-radius: 1px;
  }

  .qr-cell.filled {
    background: #1a1a1a;
  }

  .qr-label {
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  /* Details Section */
  .details-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .uid-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .uid-label {
    font-size: 0.65rem;
    font-weight: 600;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .uid-value {
    font-size: 1.1rem;
    font-family: monospace;
    font-weight: 700;
    color: #a855f7;
    background: rgba(168, 85, 247, 0.1);
    padding: 6px 12px;
    border-radius: 6px;
    border: 1px solid rgba(168, 85, 247, 0.3);
  }

  .details-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
  }

  .detail-item {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .detail-label {
    font-size: 0.65rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .detail-value {
    font-size: 0.85rem;
    color: white;
  }

  .confidence-value {
    color: #10b981;
    font-weight: 600;
  }

  .certificate-url {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    margin-top: auto;
  }

  .url-icon {
    font-size: 0.9rem;
  }

  .url-text {
    font-size: 0.75rem;
    font-family: monospace;
    color: var(--text-secondary);
  }

  /* Certificate Footer */
  .certificate-footer {
    padding: 1rem 1.5rem;
    background: rgba(0, 0, 0, 0.2);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
  }

  .share-buttons {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .share-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 8px 14px;
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--text-secondary);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .share-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }

  .share-btn-primary {
    background: linear-gradient(135deg, #a855f7, #7c3aed);
    color: white;
    border-color: transparent;
  }

  .share-btn-primary:hover {
    background: linear-gradient(135deg, #c084fc, #a855f7);
  }

  .share-icon {
    width: 16px;
    height: 16px;
  }

  /* EU Compliance */
  .eu-compliance {
    margin-top: 1.5rem;
  }

  .eu-badge {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    background: rgba(59, 130, 246, 0.05);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 12px;
  }

  .eu-flag {
    font-size: 1.5rem;
  }

  .eu-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .eu-title {
    font-size: 0.85rem;
    font-weight: 600;
    color: #60a5fa;
  }

  .eu-subtitle {
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  /* Responsive */
  @media (max-width: 500px) {
    .certificate-body {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .qr-section {
      order: -1;
    }

    .details-grid {
      text-align: left;
    }
  }
</style>
