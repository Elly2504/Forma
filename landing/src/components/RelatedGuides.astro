---
interface Props {
  currentGuideSlug?: string;
  currentBrand?: string;
}

const { currentGuideSlug, currentBrand } = Astro.props;

// Guide data for related suggestions
const guides = [
  { 
    slug: 'nike-authentication-guide', 
    title: 'How to Authenticate Nike Football Kits', 
    brand: 'Nike',
    color: '#F97316',
    description: 'Learn to decode product codes and spot fake Nike kits'
  },
  { 
    slug: 'adidas-authentication-guide', 
    title: 'How to Authenticate Adidas Football Kits', 
    brand: 'Adidas',
    color: '#3B82F6',
    description: 'Verify Adidas product codes and QR labels'
  },
  { 
    slug: 'puma-authentication-guide', 
    title: 'How to Authenticate Puma Football Kits', 
    brand: 'Puma',
    color: '#10B981',
    description: 'Understand Puma factory codes and production dates'
  },
  { 
    slug: 'umbro-authentication-guide', 
    title: 'How to Authenticate Umbro Football Kits', 
    brand: 'Umbro',
    color: '#8B5CF6',
    description: 'Focus on vintage Umbro and Pro Training authentication'
  },
  { 
    slug: 'marketplace-safety-guide', 
    title: 'How to Spot Fake Kits on Vinted, eBay & Depop', 
    brand: null,
    color: '#FBBF24',
    description: 'Protect yourself from counterfeit sellers online'
  },
  { 
    slug: 'kit-types-explained', 
    title: 'Football Kit Types Explained', 
    brand: null,
    color: '#FBBF24',
    description: 'Understand Replica, Authentic, and Player-Issue kits'
  }
];

// Filter out current guide and get top 3 related
const relatedGuides = guides
  .filter(g => g.slug !== currentGuideSlug)
  .slice(0, 3);
---

<section class="mt-12 pt-8 border-t border-white/10">
  <h3 class="text-xl sm:text-2xl font-bold text-white mb-6 flex items-center gap-3">
    <span class="w-1 h-6 bg-amber-400 rounded-full"></span>
    Related Guides
  </h3>
  
  <div class="grid gap-4 sm:grid-cols-3">
    {relatedGuides.map((guide) => (
      <a 
        href={`/guides/${guide.slug}`}
        class="group block p-4 sm:p-5 rounded-xl bg-zinc-900/50 border border-white/5 hover:border-amber-500/30 transition-all hover:-translate-y-1"
      >
        {guide.brand && (
          <span 
            class="inline-block px-2 py-0.5 text-xs font-semibold rounded-full mb-2"
            style={`background: ${guide.color}20; color: ${guide.color};`}
          >
            {guide.brand}
          </span>
        )}
        <h4 class="text-white font-semibold mb-2 group-hover:text-amber-400 transition-colors text-sm sm:text-base line-clamp-2">
          {guide.title}
        </h4>
        <p class="text-xs sm:text-sm text-zinc-500 line-clamp-2">
          {guide.description}
        </p>
      </a>
    ))}
  </div>
</section>
