---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = true;

const features = [
  'Unlimited API lookups',
  'Full multi-signal authentication',
  'Batch validation (custom limits)',
  'Digital Product Passport (DPP) generation',
  'Pricing estimates and market data',
  'Dedicated API infrastructure',
  'Custom integrations',
  'White-label options',
  'SLA guarantee (99.9% uptime)',
  'Dedicated account manager',
  'Priority support',
  'On-premise deployment option',
];

const faqs = [
  {
    q: 'How does pricing work?',
    a: 'We offer custom pricing based on your volume and integration needs. Contact us for a tailored quote.',
  },
  {
    q: 'How do I get started?',
    a: 'Reach out to our team at hello@kitticker.com. We\'ll schedule a demo and discuss your requirements.',
  },
  {
    q: 'What\'s your typical integration timeline?',
    a: 'Most integrations are completed within 2-4 weeks, depending on complexity.',
  },
  {
    q: 'Do you offer a trial period?',
    a: 'Yes, we offer a 30-day pilot program for qualified enterprise customers.',
  },
];

// FAQPage Schema for SEO
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.q,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.a
    }
  }))
};
---

<BaseLayout title="Pricing | KitTicker API" description="Enterprise authentication API for vintage football shirt platforms and marketplaces.">
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  <Header />
  
  <main class="min-h-screen bg-[#0a0a0a]">
    <!-- Hero -->
    <section class="py-20 px-4 text-center">
      <span class="inline-block px-3 py-1 text-xs font-semibold rounded-full bg-amber-500/10 text-amber-400 mb-4">Enterprise</span>
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
        Custom Pricing for <span class="text-amber-400">Your Platform</span>
      </h1>
      <p class="text-xl text-zinc-400 max-w-2xl mx-auto">
        Tailored solutions for marketplaces, retailers, and platforms of any scale.
      </p>
    </section>
    
    <!-- Enterprise Card -->
    <section class="max-w-3xl mx-auto px-4 pb-20">
      <div class="relative p-8 md:p-12 rounded-2xl border border-amber-500/50 bg-gradient-to-br from-amber-500/10 to-transparent">
        <span class="absolute -top-3 left-1/2 -translate-x-1/2 px-4 py-1 text-sm font-semibold bg-amber-500 text-black rounded-full">
          Enterprise
        </span>
        
        <div class="text-center mb-8">
          <div class="text-5xl font-bold text-white mb-2">Custom Pricing</div>
          <p class="text-zinc-400">Tailored to your volume and integration needs</p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-4 mb-8">
          {features.map((feature) => (
            <div class="flex items-center gap-3 text-zinc-300">
              <svg class="w-5 h-5 text-emerald-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              {feature}
            </div>
          ))}
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="mailto:hello@kitticker.com?subject=Enterprise%20API%20Inquiry"
            class="px-8 py-4 bg-gradient-to-r from-amber-400 to-amber-600 text-black font-semibold rounded-full text-center hover:shadow-lg hover:shadow-amber-500/25 transition-all"
          >
            Contact Sales
          </a>
          <a
            href="/docs"
            class="px-8 py-4 border border-white/20 text-white font-semibold rounded-full text-center hover:bg-white/5 transition-all"
          >
            View API Docs
          </a>
        </div>
      </div>
    </section>
    
    <!-- Trusted By -->
    <section class="max-w-4xl mx-auto px-4 pb-20 text-center">
      <p class="text-zinc-500 text-sm mb-6">Built for platforms selling on</p>
      <div class="flex items-center justify-center gap-8 flex-wrap opacity-60">
        <span class="text-lg font-semibold text-white">Depop</span>
        <span class="text-lg font-semibold text-white">Vinted</span>
        <span class="text-lg font-semibold text-white">eBay</span>
        <span class="text-lg font-semibold text-white">Classic Football Shirts</span>
        <span class="text-lg font-semibold text-white">Auction Houses</span>
      </div>
    </section>
    
    <!-- FAQ -->
    <section class="max-w-3xl mx-auto px-4 pb-20">
      <h2 class="text-2xl font-bold text-white text-center mb-8">Frequently Asked Questions</h2>
      <div class="space-y-4">
        {faqs.map((faq) => (
          <details class="group bg-zinc-900/50 rounded-xl border border-white/5">
            <summary class="flex items-center justify-between p-4 cursor-pointer text-white font-medium">
              {faq.q}
              <svg class="w-5 h-5 text-zinc-500 group-open:rotate-180 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </summary>
            <p class="px-4 pb-4 text-zinc-400">{faq.a}</p>
          </details>
        ))}
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
