---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export const prerender = true;
---

<BaseLayout 
  title="API Documentation | KitTicker" 
  description="Complete API reference for the KitTicker Authentication API. OpenAPI 3.0 specification with interactive examples."
>
  <Header />
  
  <main class="min-h-screen bg-[#0a0a0a] pt-24">
    <!-- Hero -->
    <section class="py-16 border-b border-white/10">
      <div class="max-w-6xl mx-auto px-4 text-center">
        <span class="inline-block px-4 py-1.5 bg-amber-500/10 text-amber-400 rounded-full text-sm font-medium mb-6">
          Developer Documentation
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          API <span class="text-gradient">Reference</span>
        </h1>
        <p class="text-xl text-zinc-400 max-w-2xl mx-auto">
          Integrate vintage football shirt authentication into your platform with our REST API.
        </p>
      </div>
    </section>
    
    <!-- Quick Start -->
    <section class="py-12 border-b border-white/10">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-2xl font-bold text-white mb-6">Quick Start</h2>
        
        <div class="bg-zinc-900/50 rounded-xl border border-white/10 p-6">
          <p class="text-zinc-400 mb-4">Make your first API call:</p>
          <pre class="bg-zinc-800 p-4 rounded-lg overflow-x-auto"><code class="text-sm text-zinc-300" set:html={`curl -X POST https://kitticker.com/api/v1/codes/lookup \\
  -H "Authorization: Bearer YOUR_API_KEY" \\
  -H "Content-Type: application/json" \\
  -d '{"code": "CZ3984-100"}'`} /></pre>
        </div>
      </div>
    </section>
    
    <!-- Endpoints -->
    <section class="py-12">
      <div class="max-w-4xl mx-auto px-4">
        <h2 class="text-2xl font-bold text-white mb-8">Endpoints</h2>
        
        <div class="space-y-6">
          <!-- Health -->
          <div class="bg-zinc-900/50 rounded-xl border border-white/10 p-6">
            <div class="flex items-center gap-3 mb-4">
              <span class="px-2 py-1 text-xs font-mono bg-green-500/20 text-green-400 rounded">GET</span>
              <code class="text-white font-mono">/api/v1/health</code>
              <span class="text-zinc-500 text-sm">• No auth required</span>
            </div>
            <p class="text-zinc-400">Check API and database status.</p>
          </div>
          
          <!-- Lookup -->
          <div class="bg-zinc-900/50 rounded-xl border border-white/10 p-6">
            <div class="flex items-center gap-3 mb-4">
              <span class="px-2 py-1 text-xs font-mono bg-blue-500/20 text-blue-400 rounded">POST</span>
              <code class="text-white font-mono">/api/v1/codes/lookup</code>
            </div>
            <p class="text-zinc-400 mb-4">Look up a single product code and get verification details.</p>
            <div class="bg-zinc-800 p-4 rounded-lg">
              <p class="text-xs text-zinc-500 mb-2">Request Body</p>
              <pre class="text-sm text-zinc-300"><code set:html={'{ "code": "CZ3984-100" }'} /></pre>
            </div>
          </div>
          
          <!-- Batch Validate -->
          <div class="bg-zinc-900/50 rounded-xl border border-white/10 p-6">
            <div class="flex items-center gap-3 mb-4">
              <span class="px-2 py-1 text-xs font-mono bg-blue-500/20 text-blue-400 rounded">POST</span>
              <code class="text-white font-mono">/api/v1/codes/validate</code>
              <span class="px-2 py-1 text-xs bg-amber-500/20 text-amber-400 rounded">Starter+</span>
            </div>
            <p class="text-zinc-400 mb-4">Validate multiple codes in a single request (up to 100).</p>
            <div class="bg-zinc-800 p-4 rounded-lg">
              <p class="text-xs text-zinc-500 mb-2">Request Body</p>
              <pre class="text-sm text-zinc-300"><code set:html={'{ "codes": ["CZ3984-100", "IS7462"] }'} /></pre>
            </div>
          </div>
          
          <!-- Full Verify -->
          <div class="bg-zinc-900/50 rounded-xl border border-white/10 p-6">
            <div class="flex items-center gap-3 mb-4">
              <span class="px-2 py-1 text-xs font-mono bg-blue-500/20 text-blue-400 rounded">POST</span>
              <code class="text-white font-mono">/api/v1/verify</code>
              <span class="px-2 py-1 text-xs bg-amber-500/20 text-amber-400 rounded">Starter+</span>
            </div>
            <p class="text-zinc-400">Full multi-signal authentication with confidence scoring and evidence.</p>
          </div>
          
          <!-- DPP Generate -->
          <div class="bg-zinc-900/50 rounded-xl border border-white/10 p-6">
            <div class="flex items-center gap-3 mb-4">
              <span class="px-2 py-1 text-xs font-mono bg-blue-500/20 text-blue-400 rounded">POST</span>
              <code class="text-white font-mono">/api/v1/dpp/generate</code>
              <span class="px-2 py-1 text-xs bg-purple-500/20 text-purple-400 rounded">Business+</span>
            </div>
            <p class="text-zinc-400">Generate a Digital Product Passport (DPP) with QR code.</p>
          </div>
          
          <!-- DPP Lookup -->
          <div class="bg-zinc-900/50 rounded-xl border border-white/10 p-6">
            <div class="flex items-center gap-3 mb-4">
              <span class="px-2 py-1 text-xs font-mono bg-green-500/20 text-green-400 rounded">GET</span>
              <code class="text-white font-mono">/api/v1/dpp/:uid</code>
              <span class="text-zinc-500 text-sm">• No auth required</span>
            </div>
            <p class="text-zinc-400">Look up a Digital Product Passport by its UID.</p>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Download Spec -->
    <section class="py-12 border-t border-white/10">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <h3 class="text-xl font-semibold text-white mb-4">OpenAPI Specification</h3>
        <p class="text-zinc-400 mb-6">Download our full OpenAPI 3.0 spec for use with Swagger, Postman, or your preferred API client.</p>
        <a 
          href="/openapi.yaml" 
          download
          class="inline-flex items-center gap-2 px-6 py-3 bg-zinc-800 hover:bg-zinc-700 text-white font-medium rounded-xl transition-colors"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          Download openapi.yaml
        </a>
      </div>
    </section>
    
    <!-- CTA -->
    <section class="py-16">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <div class="p-8 rounded-2xl bg-gradient-to-r from-amber-500/10 to-transparent border border-amber-500/20">
          <h2 class="text-2xl font-bold text-white mb-4">Ready to integrate?</h2>
          <p class="text-zinc-400 mb-6">Get your API key and start authenticating vintage football shirts today.</p>
          <a href="/pricing" class="inline-flex items-center gap-2 px-8 py-3 bg-gradient-to-r from-amber-400 to-amber-600 text-black font-semibold rounded-full hover:shadow-lg hover:shadow-amber-500/25 transition-all">
            Get API Key
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>
